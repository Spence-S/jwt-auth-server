extends index

block content
  div(class="container")
    div(class="row")
       div(class="col-sm-2")
       div(class="col-sm-8")
         h1(class="center-block") Login
         form(action="/signin" method="POST")
           div(class="form-group")
             label(for="email") Email:
             input(class="form-control")
           div(class="form-group")
             label(form="password") Password:
             input(class="form-control")
           button(type="submit" class="btn btn-info") Login
           a(href="/signup" class="btn btn-link") Signup!
